<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espoch.inflexpoint.controladores.vistaprincipal.VistaPrincipalControlador">
   <center>
      <AnchorPane fx:id="panelCarga" prefHeight="600.0" prefWidth="1000.0" />
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="70.0" prefWidth="1000.0" spacing="250.0" style="-fx-background-color: #2A9D8F;">
               <children>
                  <HBox prefHeight="50.0" prefWidth="336.0" spacing="20.0">
                     <children>
                        <HBox maxHeight="40.0" prefWidth="40.0" style="-fx-background-color: #FFFFFF;">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="20.0" top="5.0" />
                           </HBox.margin>
                        </HBox>
                        <Label alignment="TOP_LEFT" prefHeight="54.0" prefWidth="232.0" text="INFLEX POINT" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="50.0" prefWidth="346.0" spacing="15.0">
                     <children>
                        <TextField prefHeight="34.0" prefWidth="261.0" promptText="Buscar...">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets top="8.0" />
                           </HBox.margin>
                        </TextField>
                        <HBox maxHeight="30.0" prefWidth="30.0" style="-fx-background-color: #FFFFFF;">
                           <HBox.margin>
                              <Insets top="9.0" />
                           </HBox.margin>
                        </HBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefWidth="1000.0" style="-fx-background-color: #264653;">
               <padding>
                  <Insets left="30.0" right="5.0" />
               </padding>
               <children>
                  <ToggleButton fx:id="btnInicio" mnemonicParsing="false" onAction="#onBtnInicio" prefHeight="30.0" style="-fx-background-color: transparent;" text="INIICO" textFill="WHITE" />
                  <ToggleButton fx:id="btnCalcular" mnemonicParsing="false" onAction="#onBtnCalcular" prefHeight="30.0" style="-fx-background-color: transparent;" text="CALCULAR" textFill="WHITE" />
                  <ToggleButton fx:id="btnAyuda" layoutX="397.0" layoutY="15.0" mnemonicParsing="false" onAction="#onBtnAyuda" prefHeight="30.0" style="-fx-background-color: transparent;" text="AYUDA" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
