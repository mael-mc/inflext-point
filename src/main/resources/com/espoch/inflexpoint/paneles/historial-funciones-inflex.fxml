<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.espoch.inflexpoint.controladores.paneles.HistorialFuncionesControlador">
    <VBox prefHeight="300.0" prefWidth="300.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0"/>
        </padding>
        <HBox alignment="CENTER" prefWidth="200.0">
            <Label text="HISTORIAL DE FUNCIONES">
                <HBox.margin>
                    <Insets top="10.0"/>
                </HBox.margin>
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
        </HBox>
        <HBox prefHeight="220.0" prefWidth="300.0">
            <ScrollPane prefHeight="220.0" prefWidth="299.0" fitToWidth="true">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="280.0">
                    <VBox fx:id="vboxHistorial" spacing="5.0" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                    </VBox>
                </AnchorPane>
            </ScrollPane>
        </HBox>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
            <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#onLimpiarHistorial"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="LIMPIAR TODO EL HISTORIAL"/>
        </HBox>
    </VBox>
</AnchorPane>
