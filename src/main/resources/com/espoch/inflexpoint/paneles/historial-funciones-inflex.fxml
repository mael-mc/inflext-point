<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.espoch.inflexpoint.controladores.paneles.HistorialFuncionesControlador"
            styleClass="main-container">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="card">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Historial de Consultas" styleClass="card-subtitle" />
        </HBox>

        <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <VBox fx:id="vboxHistorial" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
                </padding>
                <!-- Los elementos del historial se inyectan aquÃ­ -->
            </VBox>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#onLimpiarHistorial"
                    styleClass="button-danger" text="LIMPIAR HISTORIAL" prefWidth="200.0" />
        </HBox>
    </VBox>
</AnchorPane>
