<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.espoch.inflexpoint.controladores.paneles.CalcularControlador">
    <VBox spacing="20.0" style="-fx-background-color: #FFFFFF;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT" prefWidth="200.0">
            <Label text="CÁLCULO DE PUNTOS DE INFLEXIÓN">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </HBox>
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    style="-fx-background-color: transparent; -fx-background: #FFFFFF;" VBox.vgrow="ALWAYS">
            <HBox spacing="20.0">
                <VBox minWidth="350.0" prefWidth="400.0" spacing="10.0">
                    <HBox>
                        <Label text="Escoja lo que desee hallar">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </HBox>
                    <HBox spacing="10.0">
                        <VBox spacing="10.0">
                            <RadioButton fx:id="chkPuntosCriticos" mnemonicParsing="false"
                                         text="Puntos críticos"/>
                            <RadioButton fx:id="chkIntervalos" mnemonicParsing="false"
                                         text="Intervalo en donde crece/decrece"/>
                            <RadioButton fx:id="chkMaxMin" mnemonicParsing="false"
                                         text="Máximos/Mínimos"/>
                        </VBox>
                        <VBox spacing="10.0">
                            <RadioButton fx:id="chkPuntoInflexion" mnemonicParsing="false"
                                         text="Punto de inflexión"/>
                            <RadioButton fx:id="chkConcavidad" layoutX="10.0" layoutY="10.0"
                                         mnemonicParsing="false" text="Concavidad"/>
                        </VBox>
                    </HBox>
                    <VBox spacing="10.0">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>
                        <Label text="Ingrese la función">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <TextField fx:id="txtFuncion" minHeight="32.0" prefWidth="250.0"
                                       promptText="Ej: x^2 - 4x + 1" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="btnTeclado" mnemonicParsing="false"
                                    onAction="#mostrarTeclado">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0"
                                               pickOnBounds="true" preserveRatio="true">
                                        <Image url="@../iconos/teclado-icono.png"/>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                    <HBox spacing="20.0">
                        <Button fx:id="btnCalcular" mnemonicParsing="false" onAction="#calcular"
                                style="-fx-background-color: #44bdac;" text="CALCULAR"
                                textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrar"
                                style="-fx-background-color: #E74C3C;" text="BORRAR"
                                textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: #0078d4;"
                                text="VER HISTORIAL" onAction="#verHistorial" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <HBox fx:id="contenedorGrafica" minHeight="300.0"
                          style="-fx-background-color: #F7F7F7; -fx-border-color: #CCCCCC;"
                          VBox.vgrow="ALWAYS">
                        <!-- Aquí irá el LineChart -->
                    </HBox>
                    <VBox fx:id="vboxResultado" minHeight="100.0" spacing="5.0"
                          style="-fx-border-color: #2A9D8F; -fx-border-width: 1; -fx-border-radius: 5;"
                          VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                        <Label text="Resultado del cálculo">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                            <padding>
                                <Insets left="10.0" top="5.0"/>
                            </padding>
                        </Label>
                        <ScrollPane fitToWidth="true" prefHeight="183.0" prefWidth="503.0"
                                    style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <VBox fx:id="vboxResultadosTexto" prefHeight="140.0"
                                  prefWidth="501.0" spacing="5.0" styleClass="results-vbox">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </VBox>
                </VBox>
            </HBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
