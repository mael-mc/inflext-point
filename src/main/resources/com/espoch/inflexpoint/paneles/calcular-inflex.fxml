<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espoch.inflexpoint.controladores.paneles.CalcularControlador">
    <VBox spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        
        <HBox alignment="CENTER_LEFT">
            <Label styleClass="card-title" text="Análisis de Funciones">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <HBox spacing="25.0">
                <!-- PANEL DE CONFIGURACIÓN Y ENTRADA -->
                <VBox minWidth="380.0" prefWidth="400.0" spacing="20.0" styleClass="card">
                    <VBox spacing="15.0">
                        <Label styleClass="card-subtitle" text="Opciones de Cálculo" />
                        <VBox spacing="12.0">
                            <RadioButton fx:id="chkPuntosCriticos" mnemonicParsing="false" styleClass="radio-button" text="Puntos críticos" />
                            <RadioButton fx:id="chkIntervalos" mnemonicParsing="false" styleClass="radio-button" text="Intervalos de monotonía" />
                            <RadioButton fx:id="chkMaxMin" mnemonicParsing="false" styleClass="radio-button" text="Máximos y Mínimos" />
                            <RadioButton fx:id="chkPuntoInflexion" mnemonicParsing="false" styleClass="radio-button" text="Puntos de Inflexión" />
                            <RadioButton fx:id="chkConcavidad" mnemonicParsing="false" styleClass="radio-button" text="Intervalos de Concavidad" />
                        </VBox>
                    </VBox>

                    <VBox spacing="12.0">
                        <Label styleClass="card-subtitle" text="Función Matemática" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <TextField fx:id="txtFuncion" prefHeight="42.0" promptText="v.gr. x^3 - 3x + 2" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnTeclado" mnemonicParsing="false" onAction="#mostrarTeclado" styleClass="button-icon">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <Image url="@../iconos/teclado-icono.png" />
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>

                    <VBox alignment="BOTTOM_CENTER" maxHeight="100.0" spacing="15.0" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER" spacing="12.0">
                            <Button fx:id="btnCalcular" mnemonicParsing="false" onAction="#calcular" prefWidth="120.0" styleClass="button-primary" text="CALCULAR" />
                            <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrar" prefWidth="100.0" styleClass="button-secondary" text="LIMPIAR" />
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#verHistorial" prefWidth="232.0" styleClass="button-secondary" text="VER HISTORIAL" />
                    </VBox>
                </VBox>

                <!-- PANEL DE RESULTADOS Y GRÁFICA -->
                <VBox spacing="25.0" HBox.hgrow="ALWAYS">
                    <!-- ÁREA DE GRÁFICA -->
                    <VBox styleClass="card" VBox.vgrow="ALWAYS">
                        <Label styleClass="card-subtitle" text="Representación Gráfica">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <HBox fx:id="contenedorGrafica" minHeight="300.0" VBox.vgrow="ALWAYS">
                            <!-- Aquí se inyecta el LineChart -->
                        </HBox>
                    </VBox>

                    <!-- ÁREA DE RESULTADOS TEXTUALES -->
                    <VBox fx:id="vboxResultado" minHeight="150.0" spacing="10.0" styleClass="card" VBox.vgrow="NEVER">
                        <Label styleClass="card-subtitle" text="Análisis Analítico" />
                        <ScrollPane fitToWidth="true" maxHeight="200.0" minHeight="100.0" styleClass="scroll-pane">
                            <VBox fx:id="vboxResultadosTexto" spacing="8.0" styleClass="results-container">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </VBox>
                </VBox>
            </HBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
