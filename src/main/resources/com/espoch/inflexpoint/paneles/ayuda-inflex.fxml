<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.espoch.inflexpoint.controladores.paneles.AyudaControlador"
            styleClass="main-container">
    <VBox spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        
        <Label styleClass="card-title" text="Guía de Usuario y Documentación" >
            <padding>
                <Insets left="5.0" />
            </padding>
        </Label>
        
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="15.0" right="20.0"/>
                </padding>
                
                <VBox styleClass="card" spacing="10.0">
                    <Label styleClass="card-subtitle" text="1. Guía de Inicio Rápido"/>
                    <Label style="-fx-text-fill: -color-800; -fx-line-spacing: 4;"
                           text="Paso 1: Diríjase a la sección 'CALCULAR'&#10;Paso 2: Seleccione los análisis estadísticos o analíticos que requiera&#10;Paso 3: Ingrese su función matemática (usando 'x' como variable independiente)&#10;Paso 4: Presione el botón 'CALCULAR' para ver el gráfico y el desglose de resultados."
                           wrapText="true"/>
                </VBox>

                <VBox styleClass="card" spacing="10.0">
                    <Label styleClass="card-subtitle" text="2. Sintaxis y Operadores"/>
                    <VBox spacing="5.0" styleClass="results-container">
                        <Label style="-fx-text-fill: -color-900; -fx-font-weight: bold;" text="Ejemplos de entrada:" />
                        <Label style="-fx-text-fill: -color-700;" text="• Polinómica: x^3 - 4*x^2 + 2" />
                        <Label style="-fx-text-fill: -color-700;" text="• Trigonométrica: sin(x) + cos(2*x)" />
                        <Label style="-fx-text-fill: -color-700;" text="• Trascendente: e^x * ln(x)" />
                        <Label style="-fx-text-fill: -color-700;" text="• Racionales: (x+1)/(x-1)" />
                    </VBox>
                </VBox>

                <VBox styleClass="card" spacing="10.0">
                    <Label styleClass="card-subtitle" text="3. Conceptos Matemáticos Aplicados"/>
                    <VBox spacing="8.0">
                        <Label style="-fx-text-fill: -color-800;" text="• Puntos Críticos: Candidatos a ser máximos o mínimos (f'(x)=0)." wrapText="true"/>
                        <Label style="-fx-text-fill: -color-800;" text="• Máximos/Mínimos: Extremos relativos de la función." wrapText="true"/>
                        <Label style="-fx-text-fill: -color-800;" text="• Punto de Inflexión: Donde la curva cambia su sentido de curvatura (f''(x)=0)." wrapText="true"/>
                    </VBox>
                </VBox>

                <VBox styleClass="card" spacing="10.0">
                    <Label styleClass="card-subtitle" text="4. Soporte y Sugerencias"/>
                    <Label style="-fx-text-fill: -color-800;"
                           text="Si experimenta errores de visualización, asegúrese de haber ingresado la función correctamente siguiendo la sintaxis matemática estándar. Las funciones trigonométricas operan en radianes por defecto."
                           wrapText="true"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
